{
  "name": "kpm-tools/shortcut-action",
  "version": "0.0.1",
  "private": true,
  "description": "Automate story movement in Shortcut",
  "main": "lib/main.js",
  "scripts": {
    "dev": "ts-node ./src/main.ts",
    "build": "tsc",
    "format": "prettier --write '**/*.ts'",
    "format-check": "prettier --check '**/*.ts'",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build --source-map --license licenses.txt",
    "all": "npm run build && npm run format && npm run lint && npm run test && npm run package",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kpm-tools/shortcut-action.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/github": "^5.1.1",
    "@useshortcut/client": "^1.0.0",
    "dotenv": "^16.0.3",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@types/node": "^20.1.4",
    "@typescript-eslint/parser": "^5.59.5",
    "@vercel/ncc": "^0.36.1",
    "eslint": "^8.40.0",
    "eslint-plugin-github": "^4.7.0",
    "eslint-plugin-jest": "^27.2.1",
    "jest": "^29.5.0",
    "js-yaml": "^4.1.0",
    "prettier": "^2.8.8",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  }
}
